<div class="devisce-containerSignup">
  <div class="logo-div">
    <%= image_tag "deforestation-word-logo.png", style: 'width: 200px;margin: 10px auto' %>
  </div>
  <h2>Sign Up</h2>
  <div class="d-flex">
  <p>or &nbsp;</p><%= render "devise/shared/links" %>
  </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
    data: {turbo: false}) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field" style="display:flex; flex-direction:column;">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
<%# = f.input :location_id, :collection => Location.all.collect {|c| [c.loc_name, c.loc_id]} %>
    <%# <div class="field">
      <%= f.label :department %><br />
      <%# <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      <%# <%= f.input :departments_id, value_method: :id, :collection.to_i => Department.first.id %>
    <%# </div> %>

    <div class="actions">
      <%= f.submit "Sign up", style:"background-color:transparent;border:none;" %>
    </div>
  <% end %>
</div>
  <%= render :partial => 'shared/bg-images' %>
